<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="chat_item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_chat_time_tag</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="chat_item_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">#a7a6a6</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="chat_item_audio_length">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#a7a6a6</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="chat_item_avatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/default_head</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="chat_item_content">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="chat_item_text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="chat_item_image_content">
        <item name="android:contentDescription">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:minHeight">120dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="chat_item_sound">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="chat_item_file">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/file_icon</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">1dp</item>
    </style>

    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>