<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_main_title"/>
    <View
        android:id="@+id/divider_blue"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/title_bar"
        android:background="@color/title_background_color"/>
    <ImageView
        android:id="@+id/waiting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:src="@drawable/waiting_frame"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideOverlay"
        android:layout_below="@id/divider_blue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subject"
                style="@style/text_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    style="@style/text_small"
                    />
                <TextView
                    android:id="@+id/date"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rl"
                android:background="@color/divider" />

            <WebView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:scrollbars="none"
                android:scrollbarStyle="outsideOverlay"
                android:background="#ffffff" />
            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/content"
                android:background="@color/divider" />
            <TextView
                android:id="@+id/reply_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textSize="16sp"
                android:text="网友留言"
                />
            <com.meetfine.pingyugov.model.MyListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:cacheColorHint="#00000000"
                android:background="@drawable/editbox_bg"
                android:layout_below="@+id/reply_tv"
                android:divider="@color/divider"
                android:dividerHeight="0.5dp"
                android:fadingEdge="none"
                android:visibility="gone"
                android:fastScrollEnabled="false"
                android:scrollbarStyle="outsideOverlay"
                android:smoothScrollbar="true">

            </com.meetfine.pingyugov.model.MyListView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>