<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white">
    <include layout="@layout/layout_main_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="社保卡"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                >
                <TextView
                    android:id="@+id/createDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="2016-12-30 9:23"/>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信件类别:建议反馈"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    />
                <TextView
                    android:id="@+id/createUserTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="来信人:"/>
                <TextView
                    android:id="@+id/createUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王**"
                    android:singleLine="true"
                    android:layout_toLeftOf="@id/type"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_toRightOf="@id/createUserTxt"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="督办部门:市人社局"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[已处理]"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/divider"/>
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                />
            <RelativeLayout
                android:id="@+id/rl_reply"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:padding="10dp"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/replyDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="2016-12-30 9:23"/>
                <TextView
                    android:id="@+id/replyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="回复单位:"/>
                <TextView
                    android:id="@+id/reply_Company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_toRightOf="@id/replyName"/>
                <TextView
                    android:id="@+id/reply_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_below="@+id/reply_Company"
                    android:layout_marginTop="10dp"/>

                </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/waiting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/waiting_frame"
        android:visibility="gone"
        android:layout_gravity="center"/>
</LinearLayout>