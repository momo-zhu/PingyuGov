<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_large"
        android:gravity="center_horizontal"
        android:text="征集留言"
        android:textColor="@color/title_background_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/msg1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/title_background_color"
            android:textSize="12sp"
            />
        <View
            android:id="@+id/ver_divider1"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:background="@color/title_background_color"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:text="带星号的为必需项"
            />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@id/txt1"
            android:src="@drawable/icon_star"
            />
        <View
            android:id="@+id/hor_divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/msg1"
            android:background="@color/divider"/>
        <TextView
            android:id="@+id/contacttxt"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hor_divider1"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:text="姓名"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/contacttxt"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/edit_box"
            android:maxLines="1"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/contacttxt"
            android:layout_marginTop="10dp"
            android:layout_below="@id/hor_divider1"
            android:textSize="14sp"
            android:hint=""
            />
        <TextView
            android:id="@+id/cellphoneTxt"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_below="@id/contact"
            android:layout_marginTop="10dp"
            android:text="联系电话"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/cellphoneTxt"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/cellphone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/edit_box"
            android:maxLines="1"
            android:inputType="phone"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/cellphoneTxt"
            android:layout_alignTop="@id/cellphoneTxt"
            android:textSize="14sp"
            android:hint="请输入您的联系电话"
            android:editable="false"
            />
        <TextView
            android:id="@+id/emailtxt"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_below="@id/cellphoneTxt"
            android:layout_marginTop="10dp"
            android:text="电子邮箱"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/emailtxt"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/edit_box"
            android:maxLines="2"
            android:minLines="2"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/emailtxt"
            android:layout_alignTop="@id/emailtxt"
            android:textSize="14sp"
            android:hint="请输入您的电邮箱"
            />

        <TextView
            android:id="@+id/contenttxt"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:text="留言内容"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/contenttxt"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edit_box"
            android:minLines="6"
            android:maxLines="6"
            android:gravity="top"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/contenttxt"
            android:layout_alignTop="@id/contenttxt"
            />
    </RelativeLayout>

</LinearLayout>
