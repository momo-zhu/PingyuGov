<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wide_divider">
    <include layout="@layout/layout_main_title"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        tab:tl_divider_color="#1A000000"
        tab:tl_divider_padding="13dp"
        tab:tl_divider_width="1dp"
        tab:tl_indicator_color="@color/title_background_color"
        tab:tl_indicator_height="1.5dp"
        tab:tl_indicator_width_equal_title="true"
        tab:tl_tab_padding="10dp"
        tab:tl_tab_space_equal="true"
        tab:tl_textSelectColor="@color/title_background_color"
        tab:tl_textUnselectColor="@color/text_gray"
        tab:tl_underline_color="#1A000000"
        tab:tl_underline_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>