<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_main_title" />
    <RelativeLayout
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_height"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_txt"
            style="@style/text_large"
            android:textSize="16sp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="姓名" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/name_txt"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/name_txt"
            android:layout_toRightOf="@id/name_txt"
            style="@style/edit_box"
            />
        <TextView
            android:id="@+id/userName_txt"
            style="@style/text_large"
            android:textSize="16sp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/name_txt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="用户名" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/userName_txt"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/userName_txt"
            android:layout_toRightOf="@id/userName_txt"
            style="@style/edit_box"
            />
        <TextView
            android:id="@+id/password_txt"
            style="@style/text_large"
            android:textSize="16sp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@id/userName_txt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="密码" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/password_txt"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/password_txt"
            android:layout_toRightOf="@id/password_txt"
            style="@style/edit_box"
            />
        <TextView
            android:id="@+id/password_txt2"
            style="@style/text_large"
            android:textSize="16sp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@id/password_txt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="确认密码" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/password_txt2"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/password_txt2"
            android:layout_toRightOf="@id/password_txt2"
            style="@style/edit_box"
            />
        <TextView
            android:id="@+id/phone_txt2"
            style="@style/text_large"
            android:textSize="16sp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@id/password_txt2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="电话号码" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/phone_txt2"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/phone_txt2"
            android:layout_toRightOf="@id/phone_txt2"
            style="@style/edit_box"
            />
        <TextView
            android:id="@+id/email_txt"
            style="@style/text_large"
            android:textSize="16sp"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_below="@id/phone_txt2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Email" />
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_alignTop="@id/email_txt"
            android:src="@drawable/icon_star" />
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@id/email_txt"
            android:layout_toRightOf="@id/email_txt"
            style="@style/edit_box"
            />

        <TextView
            android:id="@+id/register_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/red_button_background"
            android:layout_below="@+id/email"
            android:gravity="center"
            android:text="立即注册"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
